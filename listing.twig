{% include '_header.twig' %}

              <div class="row spacer3"></div>

              {% if records is defined and records|length > 0 %}
                {% for record in records %}

                  <div class="row columns">
                    <h4>{{ record.title }}</h4>
                    <div class="small-2 columns">
                      {% if record.image is defined and record.image is not empty %}
                        <p><img class="left" src="{{ record.image|thumbnail() }}" alt=""/></p>
                      {% endif %}
                    </div>
                    <div class="small-10 columns">
                      {{ record.teaser is defined and record.teaser is not empty ? record.teaser : record|excerpt(200) }}
                      <a href="{{ record.link }}" class="button secondary tiny">full article &raquo;</a><br />
                      <small>published on {{ record.datepublish|localdate("%B %e %Y") }}{% include '_sub_taxonomylinks.twig' %}</small>
                      <div class="row spacer2"></div>
                    </div>
                  </div>

                {% endfor %}

                {{ pager() }}

              {% endif %}

{% include '_footer.twig' %}